    {
        "id": "af919930696008fc",
        "type": "function",
        "z": "c7ccafe5abfad7f1",
        "name": "Costruisci Log",
        "func": "var logs = flow.get('caveau_log') || [];\n\n// Se arriva un comando di reset (payload vuoto da stats logic)\nif (Array.isArray(msg.payload) && msg.payload.length === 0) {\n    logs = [];\n    flow.set('caveau_log', logs);\n    return { payload: logs };\n}\n\n// Altrimenti √® un nuovo evento\nvar now = new Date();\nvar timeStr = now.toLocaleTimeString('it-IT');\nvar eventStr = msg.payload.toString();\n\n// Aggiungi in testa\nlogs.unshift({ time: timeStr, event: eventStr });\n\n// Tieni solo gli ultimi 10\nif (logs.length > 10) logs = logs.slice(0, 10);\n\nflow.set('caveau_log', logs);\nreturn { payload: logs };",
        "outputs": 1,
        "noerr": 0,
        "initialize": "",
        "finalize": "",
