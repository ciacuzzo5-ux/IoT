    {
        "id": "ed43529f5e23c497",
        "type": "function",
        "z": "c7ccafe5abfad7f1",
        "name": "Calcola Statistiche",
        "func": "// Recupero le statistiche salvate o le inizializzo a 0\nvar stats = flow.get('caveau_stats') || {\n    access: 0,\n    error: 0,\n    alarm_door: 0,\n    alarm_vase: 0,\n    alarm_paint: 0,\n    alarm_total: 0\n};\n\n// Gestione Reset\nif (msg.topic === \"reset_stats\") {\n    stats = {\n        access: 0,\n        error: 0,\n        alarm_door: 0,\n        alarm_vase: 0,\n        alarm_paint: 0,\n        alarm_total: 0\n    };\n    flow.set('caveau_stats', stats);\n    // Resetta anche il log\n    flow.set('caveau_log', []);\n}\nelse {\n    // Logica aggiornamento standard\n    var evt = msg.payload.toString();\n\n    if(evt == \"accesso_consentito\") stats.access++;\n    else if(evt == \"codice_errato\") stats.error++;\n    else if(evt == \"allarme_porta\") { stats.alarm_door++; stats.alarm_total++; }\n    else if(evt == \"allarme_vaso\") { stats.alarm_vase++; stats.alarm_total++; }\n    else if(evt == \"allarme_quadro\") { stats.alarm_paint++; stats.alarm_total++; }\n    else if(evt == \"allarme_remoto\") { stats.alarm_total++; }\n    \n    flow.set('caveau_stats', stats);\n}\n\n// OUTPUTS\nvar msgAccess = { payload: stats.access };\nvar msgError = { payload: stats.error };\nvar msgAlarmTotal = { payload: stats.alarm_total };\nvar chartData = [\n    {\n        \"series\": [\"Eventi\"],\n        \"data\": [\n            [stats.alarm_door, stats.alarm_vase, stats.alarm_paint]\n        ],\n        \"labels\": [\"Porta\", \"Vaso\", \"Quadro\"]\n    }\n];\nvar msgChart = { payload: chartData };\n\n// Per il log reset, mando un segnale vuoto\nvar msgResetLog = (msg.topic === \"reset_stats\") ? { payload: [] } : null;\n\nreturn [msgAccess, msgError, msgAlarmTotal, msgChart, msgResetLog];",
        "outputs": 5,
        "noerr": 0,
        "initialize": "",
        "finalize": "",
